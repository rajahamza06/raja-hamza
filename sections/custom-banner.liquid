<section
  class="gift-guide-section"
  style="
    {% if section.settings.bg_image != blank %}
      --desktop-bg: url('{{ section.settings.bg_image | image_url: width: 1600 }}');
    {% else %}
      --desktop-bg: {{ section.settings.bg_color }};
    {% endif %}
    {% if section.settings.bg_image_mobile != blank %}
      --mobile-bg: url('{{ section.settings.bg_image_mobile | image_url: width: 800 }}');
    {% else %}
      --mobile-bg: {{ section.settings.bg_color }};
    {% endif %}
  "
>
  <div class="gift-guide-container">
    <!-- Heading + Description -->
    <div class="gift-guide-text-box">
      {% if section.settings.heading != blank %}
        <h2 class="gift-guide-heading" style="color: {{ section.settings.heading_color }};">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      <!-- Desktop Text -->
      {% if section.settings.subtext != blank %}
        <p class="gift-guide-subtext desktop-only" style="color: {{ section.settings.subtext_color }};">
          {{ section.settings.subtext }}
        </p>
      {% endif %}

      <!-- Mobile Text -->
      {% if section.settings.subtext_mobile != blank %}
        <p class="gift-guide-subtext mobile-only" style="color: {{ section.settings.subtext_color }};">
          {{ section.settings.subtext_mobile }}
        </p>
      {% endif %}
    </div>

    <!-- Button -->
    {% if section.settings.button_text != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="gift-guide-btn {{ section.settings.button_hover_effect }}"
        style="
          --btn-bg: {{ section.settings.button_bg }};
          --btn-color: {{ section.settings.button_color }};
          --btn-hover-bg: {{ section.settings.button_hover_bg }};
          --btn-hover-color: {{ section.settings.button_hover_color }};
          text-transform: {{ section.settings.button_text_transform }};
        "
      >
        {{ section.settings.button_text }}
        {% if section.settings.button_icon != blank %}
          <img
            src="{{ section.settings.button_icon | image_url }}"
            alt=""
            class="gift-guide-btn-icon"
            style="
              width: {{ section.settings.button_icon_width }}px;
              height: {{ section.settings.button_icon_height }}px;
              object-fit: {{ section.settings.button_icon_fit }};
            "
          >
        {% endif %}
      </a>
    {% endif %}
  </div>
</section>

{% style %}
.gift-guide-section {
  background: var(--desktop-bg) no-repeat center/cover;
  padding-block: 425px 51px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  transition: background-image 0.3s ease;
}

.gift-guide-container {
  width: 100%;
  max-width: 1320px;
  margin: 0 auto;
  padding-inline: 18px;
}

.gift-guide-text-box {
  margin-bottom: 50px;
  max-width: 483px;
  width: 100%;
}

.gift-guide-heading {
  font-size: 70px;
  font-weight: 500;
  margin-bottom: 50px;
  font-family: 'Jost', sans-serif;
}

.gift-guide-subtext {
  font-size: 20px;
  line-height: 1.6;
  font-weight: 400;
  margin: 0;
  font-family: 'Jost', sans-serif;
}

/* Hide/Show different texts */
.desktop-only { display: block; }
.mobile-only { display: none; }

.gift-guide-btn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 14px 55px;
  text-decoration: none;
  transition: all 0.3s ease;
  width: fit-content;
  background: var(--btn-bg);
  color: var(--btn-color);
}

.gift-guide-btn-icon {
  display: inline-block;
  transition: filter 0.3s ease;
}

/* Hover Effects */
.gift-guide-btn.hover-bg:hover {
  background: var(--btn-hover-bg);
  color: var(--btn-hover-color);
}
.gift-guide-btn.hover-scale:hover { transform: scale(1.05); }
.gift-guide-btn.hover-both:hover {
  background: var(--btn-hover-bg);
  color: var(--btn-hover-color);
  transform: scale(1.05);
}

/* Invert icon on hover if bg changes */
.gift-guide-btn.hover-bg:hover img,
.gift-guide-btn.hover-both:hover img {
  filter: invert(1);
}

/* Mobile Responsive */
@media screen and (max-width: 768px) {
  .gift-guide-section {
    background: var(--mobile-bg) no-repeat center/contain;
    padding-block: 110px 70px;
    min-height: 455px;
    display: flex;
    align-items: unset;
  }

  .gift-guide-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .gift-guide-text-box {
    text-align: center;
    margin-bottom: 0;
    max-width: 100%;
  }

  .gift-guide-heading {
    font-size: 30px;
    margin-bottom: 24px;
  }

  .gift-guide-subtext { font-size: 16px; }

  .gift-guide-btn {
    margin: 20px auto 0;
    justify-content: center;
  }

  .desktop-only { display: none; }
  .mobile-only { display: block; }
}
{% endstyle %}

{% schema %}
{
  "name": "Gift Guide Section",
  "settings": [
    { "type": "image_picker", "id": "bg_image", "label": "Desktop Background Image" },
    { "type": "image_picker", "id": "bg_image_mobile", "label": "Mobile Background Image" },
    { "type": "color", "id": "bg_color", "label": "Background Color (fallback)", "default": "#ffffff" },

    { "type": "text", "id": "heading", "label": "Heading", "default": "The Gift Guide" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#000000" },

    {
      "type": "textarea",
      "id": "subtext",
      "label": "Desktop Description Text",
      "default": "Discover joy: Your ultimate holiday gift destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "textarea",
      "id": "subtext_mobile",
      "label": "Mobile Description Text",
      "default": "Discover joy on the go! Perfect gifts for every loved one."
    },
    { "type": "color", "id": "subtext_color", "label": "Description Color", "default": "#000000" },

    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Shop Now" },
    { "type": "url", "id": "button_link", "label": "Button Link", "default": "/collections/all" },

    { "type": "image_picker", "id": "button_icon", "label": "Button Icon (SVG, PNG, JPG)" },
    { "type": "range", "id": "button_icon_width", "label": "Button Icon Width (px)", "min": 10, "max": 100, "step": 1, "default": 20 },
    { "type": "range", "id": "button_icon_height", "label": "Button Icon Height (px)", "min": 10, "max": 100, "step": 1, "default": 20 },
    {
      "type": "select",
      "id": "button_icon_fit",
      "label": "Button Icon Fit",
      "options": [
        { "value": "contain", "label": "Contain" },
        { "value": "cover", "label": "Cover" }
      ],
      "default": "contain"
    },

    {
      "type": "select",
      "id": "button_hover_effect",
      "label": "Button Hover Effect",
      "options": [
        { "value": "hover-bg", "label": "Background Change Only" },
        { "value": "hover-scale", "label": "Scale Only" },
        { "value": "hover-both", "label": "Background + Scale" }
      ],
      "default": "hover-both"
    },

    { "type": "color", "id": "button_bg", "label": "Button Background", "default": "#000000" },
    { "type": "color", "id": "button_color", "label": "Button Text Color", "default": "#ffffff" },
    { "type": "color", "id": "button_hover_bg", "label": "Button Hover Background", "default": "#333333" },
    { "type": "color", "id": "button_hover_color", "label": "Button Hover Text Color", "default": "#ffffff" },

    {
      "type": "select",
      "id": "button_text_transform",
      "label": "Button Text Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "capitalize", "label": "Capitalize" },
        { "value": "lowercase", "label": "Lowercase" }
      ],
      "default": "uppercase"
    }
  ],
  "presets": [{ "name": "Gift Guide Section" }]
}
{% endschema %}
