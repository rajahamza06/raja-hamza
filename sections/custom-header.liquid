{{ 'custom-header.css' | asset_url | stylesheet_tag }}
<header-component
  id="flex-header"
  {% if section.settings.sticky_header != 'none' %}
    sticky="{{ section.settings.sticky_header }}"
  {% endif %}
  style="background-color: {{ section.settings.header_bg_color }};"
>
  <div class="header-container">
    <div class="header-row">
      <!-- Hamburger -->
      <button id="mobile-menu-toggle" class="mobile-hamburger" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <!-- Logo -->
       <div class="header-logo-wrap">
        <a href="{{ routes.root_url }}" class="header-logo-link">
          {% if section.settings.use_text_logo %}
            <h2
              class="header-logo"
              style="color: {{ section.settings.logo_text_color }}; text-transform: {{ section.settings.logo_text_transform }};"
            >
              {{ section.settings.logo_text }}
            </h2>
          {% elsif section.settings.logo_image != blank %}
            <img src="{{ section.settings.logo_image | image_url: width: 150 }}" alt="Logo" class="header-logo-img">
          {% else %}
            <h2
              class="header-logo"
              style="color: {{ section.settings.logo_text_color }}; text-transform: {{ section.settings.logo_text_transform }};"
            >
              {{ shop.name }}
            </h2>
          {% endif %}
        </a>
      </div>

      <!-- Middle Text -->
      <div class="header-middle">
        <p class="header-middle-text" style="text-transform: {{ section.settings.middle_text_transform }};">
          {{ section.settings.middle_text }}
        </p>
      </div>

      <!-- Button -->
      <div class="header-button-wrap">
        {% if section.settings.button_text != blank %}
          <a
            href="{{ section.settings.button_link }}"
            class="header-button {{ section.settings.button_hover_effect }}"
            style="
              --btn-bg: {{ section.settings.button_bg }};
              --btn-color: {{ section.settings.button_color }};
              --btn-hover-bg: {{ section.settings.button_hover_bg }};
              --btn-hover-color: {{ section.settings.button_hover_color }};
              text-transform: {{ section.settings.button_text_transform }};
            "
          >
            {{ section.settings.button_text }}

            {% if section.settings.button_icon != blank %}
              {% assign icon_ext = section.settings.button_icon | split: '.' | last %}
              {% if icon_ext == 'svg' %}
                <span class="header-button-icon-right">
                  {{ section.settings.button_icon | file_url | inline_svg }}
                </span>
              {% else %}
                <img
                  src="{{ section.settings.button_icon | image_url }}"
                  alt=""
                  class="header-button-icon-right"
                  style="
                    width: {{ section.settings.button_icon_width }}px;
                    height: {{ section.settings.button_icon_height }}px;
                    object-fit: {{ section.settings.button_icon_fit }};
                  "
                >
              {% endif %}
            {% endif %}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Mobile Slide Menu -->
  <div id="mobile-menu-panel" class="mobile-panel {{ section.settings.mobile_menu_direction }}">
    <div class="mobile-panel-content">
      <p style="text-transform: {{ section.settings.middle_text_transform }};">
        {{ section.settings.middle_text }}
      </p>
      {% if section.settings.button_text != blank %}
        <a
          href="{{ section.settings.button_link }}"
          class="header-button {{ section.settings.button_hover_effect }}"
          style="
            --btn-bg: {{ section.settings.button_bg }};
            --btn-color: {{ section.settings.button_color }};
            --btn-hover-bg: {{ section.settings.button_hover_bg }};
            --btn-hover-color: {{ section.settings.button_hover_color }};
            text-transform: {{ section.settings.button_text_transform }};
          "
        >
          {{ section.settings.button_text }}
          {% if section.settings.button_icon != blank %}
            {% if icon_ext == 'svg' %}
              <span class="header-button-icon-right">
                {{ section.settings.button_icon | file_url | inline_svg }}
              </span>
            {% else %}
              <img
                src="{{ section.settings.button_icon | image_url }}"
                alt=""
                class="header-button-icon-right"
                style="
                  width: {{ section.settings.button_icon_width }}px;
                  height: {{ section.settings.button_icon_height }}px;
                  object-fit: {{ section.settings.button_icon_fit }};
                "
              >
            {% endif %}
          {% endif %}
        </a>
      {% endif %}
    </div>
  </div>
</header-component>


<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('flex-header');
    const toggleBtn = document.getElementById('mobile-menu-toggle');
    const panel = document.getElementById('mobile-menu-panel');

    // Sticky header
    if (header.hasAttribute('sticky')) {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          header.setAttribute('data-sticky-state', 'active');
        } else {
          header.setAttribute('data-sticky-state', 'idle');
        }
      });
    }

    // Mobile toggle
    if (toggleBtn) {
      toggleBtn.addEventListener('click', () => {
        toggleBtn.classList.toggle('active');
        if (panel) panel.classList.toggle('active');
      });
    }
  });
</script>

{% schema %}
{
  "name": "Flex Header",
  "settings": [
    { "type": "checkbox", "id": "use_text_logo", "label": "Use Text Logo", "default": false },
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "My Store" },
    { "type": "color", "id": "logo_text_color", "label": "Logo Text Color", "default": "#000000" },
    {
      "type": "select",
      "id": "logo_text_transform",
      "label": "Logo Text Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "capitalize", "label": "Capitalize" },
        { "value": "lowercase", "label": "Lowercase" }
      ],
      "default": "none"
    },
    { "type": "image_picker", "id": "logo_image", "label": "Logo Image" },
    { "type": "text", "id": "middle_text", "label": "Middle Text", "default": "Welcome to Our Store!" },
    {
      "type": "select",
      "id": "middle_text_transform",
      "label": "Middle Text Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "capitalize", "label": "Capitalize" },
        { "value": "lowercase", "label": "Lowercase" }
      ],
      "default": "none"
    },
    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Learn More" },
    {
      "type": "select",
      "id": "button_text_transform",
      "label": "Button Text Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "capitalize", "label": "Capitalize" },
        { "value": "lowercase", "label": "Lowercase" }
      ],
      "default": "uppercase"
    },
    { "type": "image_picker", "id": "button_icon", "label": "Button Icon (SVG, PNG, JPG)" },
    {
      "type": "range",
      "id": "button_icon_width",
      "label": "Button Icon Width (px)",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 20
    },
    {
      "type": "range",
      "id": "button_icon_height",
      "label": "Button Icon Height (px)",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 20
    },
    {
      "type": "select",
      "id": "button_icon_fit",
      "label": "Button Icon Fit",
      "options": [
        { "value": "contain", "label": "Contain" },
        { "value": "cover", "label": "Cover" }
      ],
      "default": "contain"
    },
    {
      "type": "select",
      "id": "button_hover_effect",
      "label": "Button Hover Effect",
      "options": [
        { "value": "hover-bg", "label": "Background Change Only" },
        { "value": "hover-scale", "label": "Scale Only" },
        { "value": "hover-both", "label": "Background + Scale" }
      ],
      "default": "hover-both"
    },
    { "type": "url", "id": "button_link", "label": "Button Link", "default": "/collections/all" },
    { "type": "color", "id": "button_bg", "label": "Button Background", "default": "#f7931e" },
    { "type": "color", "id": "button_color", "label": "Button Text Color", "default": "#ffffff" },
    { "type": "color", "id": "button_hover_bg", "label": "Button Hover Background", "default": "#000000" },
    { "type": "color", "id": "button_hover_color", "label": "Button Hover Text", "default": "#ffffff" },
    { "type": "color", "id": "header_bg_color", "label": "Header Background Color", "default": "#ffffff" },
    {
      "type": "select",
      "id": "mobile_menu_direction",
      "label": "Mobile Menu Direction",
      "options": [
        { "value": "left", "label": "Slide from Left" },
        { "value": "right", "label": "Slide from Right" },
        { "value": "top", "label": "Slide from Top" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "container_width",
      "label": "Container Max Width (px)",
      "min": 600,
      "max": 1600,
      "step": 10,
      "default": 1360
    },
    {
      "type": "select",
      "id": "sticky_header",
      "label": "Sticky Header",
      "options": [
        { "value": "always", "label": "Always" },
        { "value": "scroll-up", "label": "On Scroll Up" },
        { "value": "none", "label": "Never" }
      ],
      "default": "always"
    }
  ],
  "presets": [{ "name": "Flex Header" }]
}
{% endschema %}
