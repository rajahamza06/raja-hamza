<header class="custom-header" style="display:flex; justify-content:space-between; align-items:center; padding:20px;">
  
  <!-- Left: Logo -->
  <div class="header-logo">
    {% if section.settings.logo != blank %}
      <img src="{{ section.settings.logo | image_url }}" alt="{{ shop.name }}" style="max-height:60px;">
    {% else %}
      <h2>{{ shop.name }}</h2>
    {% endif %}
  </div>

  <!-- Middle: Text / Line -->
  <div class="header-text" style="text-align:center; flex-grow:1;">
    <p style="margin:0; font-size:18px;">{{ section.settings.middle_text }}</p>
  </div>

  <!-- Right: Button -->
  <div class="header-button">
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="btn" style="padding:10px 20px; background:#000; color:#fff; text-decoration:none; border-radius:5px;">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>

</header>

{% schema %}
{
  "name": "Dynamic Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "middle_text",
      "label": "Middle Text",
      "default": "Welcome to Our Store!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Header",
      "category": "Header"
    }
  ]
}
{% endschema %}
