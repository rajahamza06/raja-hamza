<!-- Quick View Popup -->
<div id="quick-view-popup" class="quick-view-popup">
  <div class="quick-view-content">
    <span class="close-btn" onclick="closeQuickView()">&times;</span>
    <div class="popup-inner">
      <!-- Left: Product Image -->
      <div class="popup-image-wrap">
        <img id="popup-image" src="" alt="">
      </div>

      <!-- Right: Product Details -->
      <div class="popup-details">
        <h3 id="popup-title"></h3>
        <p id="popup-price" class="popup-price"></p>
        <p id="popup-description" class="popup-desc"></p>

        <!-- Variant: Color as buttons -->
        <div id="popup-color-wrap" class="variant-wrap"></div>

        <!-- Variant: Size as dropdown -->
        <select id="popup-size-wrap" class="variant-dropdown">
          <option disabled selected>Choose your size</option>
        </select>

        <!-- Add to Cart Button -->
        <button id="add-to-cart-btn" class="popup-add-btn">ADD TO CART â†’</button>
      </div>
    </div>
  </div>
</div>

<style>
/* Popup Overlay */
.quick-view-popup {
  display: none;
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 9999;
  justify-content: center;
  align-items: center;
}
.quick-view-popup.active { display: flex; }

/* Popup Content */
.quick-view-content {
  background: #fff;
  padding: 20px;
  width: 500px;
  max-width: 90%;
  position: relative;
  animation: popupFade 0.3s ease;
}
@keyframes popupFade {
  from { opacity:0; transform: scale(0.9); }
  to { opacity:1; transform: scale(1); }
}

/* Close Button */
.close-btn {
  position: absolute;
  top: 10px; right: 15px;
  font-size: 24px;
  cursor: pointer;
}

/* Popup Layout */
.popup-inner {
  display: flex;
  gap: 15px;
}
.popup-image-wrap {
  flex: 0 0 120px;
}
.popup-image-wrap img {
  width: 100%;
  display: block;
}
.popup-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}
.popup-price { font-weight: bold; }
.popup-desc { font-size: 14px; color: #444; }

/* Color Options */
.variant-wrap {
  display: flex;
  gap: 5px;
  margin-top: 10px;
}
.variant-wrap button {
  flex: 1;
  padding: 8px;
  border: 1px solid #000;
  background: #fff;
  cursor: pointer;
  transition: 0.2s;
}
.variant-wrap button.active,
.variant-wrap button:hover {
  background: #000;
  color: #fff;
}

/* Size Dropdown */
.variant-dropdown {
  margin-top: 10px;
  padding: 8px;
  border: 1px solid #000;
  width: 100%;
}

/* Add to Cart Button */
.popup-add-btn {
  margin-top: 15px;
  padding: 14px;
  width: 100%;
  background: #000;
  color: #fff;
  font-weight: bold;
  border: none;
  cursor: pointer;
  transition: 0.3s;
}
.popup-add-btn:hover { background: #333; }
</style>
